CREATE table friends (
    id INTEGER PRIMARY KEY AUTOINCREMENT,
    person1_id INTEGER,
    person2_id INTEGER);

INSERT INTO friends (person1_id, person2_id)
    VALUES (1, 4);
INSERT INTO friends (person1_id, person2_id)
    VALUES (2, 3);
    

/* JOIN TWO TABLES with like values, and combine by the common factor, the id */    
SELECT persons.fullname, hobbies.name FROM persons
    JOIN hobbies
    ON hobbies.person_id = persons.id;
    
/* COMBINE PAIRS OF FRIENDS by ID number on tables */

SELECT a.fullname, b.fullname FROM friends
/* SELF JOIN persons table, identified as persons a and persons b */
    JOIN persons a
/* ON command pairs common values from each table(s) */
    ON person1_id = a.id
    JOIN persons b
    ON person2_id = b.id;
